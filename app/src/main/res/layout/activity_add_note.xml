<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".AddNoteActivity">

    <!-- TextView for the heading "Daily Updates". -->
    <TextView
        android:id="@+id/addNoteHeading"
        android:layout_width="263dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Daily Updates"
        android:textAllCaps="false"
        android:textColor="@color/purple"
        android:textSize="34sp"
        android:textStyle="bold|italic" />

    <!-- ImageView for the save button. -->
    <ImageView
        android:id="@+id/saveButton"
        android:layout_width="77dp"
        android:layout_height="59dp"
        android:layout_alignTop="@id/addNoteHeading"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="6dp"
        android:src="@drawable/baseline_done_24" />

    <!-- EditText for entering the title (date). -->
    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/addNoteHeading"
        android:layout_marginTop="16dp"
        android:background="@drawable/orange_border"
        android:fontFamily="sans-serif"
        android:hint="Enter the date"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="#090909"
        android:textSize="20sp" />

    <!-- EditText for entering the content (description). -->
    <EditText
        android:id="@+id/contentEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleEditText"
        android:layout_marginTop="12dp"
        android:background="@drawable/orange_border"
        android:fontFamily="sans-serif"
        android:gravity="top"
        android:hint="Enter the description"
        android:padding="12dp"
        android:textAllCaps="true"
        android:textColor="#090909"
        android:textSize="18sp" />

</RelativeLayout>
